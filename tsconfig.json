{
  "compilerOptions": {
    /*
     * Basic Options
     */
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,

    /*
     * Module Resolution Options
     */
    "module": "commonjs",
    "esModuleInterop": true,
    /*
     * Source Map Options
     */
    "sourceMap": false,
  },

  "compileOnSave": false,

  "include": [
    "src/**/*.ts",
  ],
}
